
apiVersion: apps/v1
kind: Deployment
metadata:
  name: gocd-server-deployment
  namespace: prod-gocd-server
  labels: 
    app: gocd-server
    tier: server
spec:
  selector:
    matchLabels:
      app: gocd-server
      tier: server
  replicas: 1
  template:
    metadata:
      labels:
        app: gocd-server
        tier: server
    spec:
      containers:
      - name: gocd-server
        image: manukoli1986/gocd-server:v2
        readinessProbe:
          tcpSocket:
            port: 8154
          initialDelaySeconds: 5
          periodSeconds: 10
        livenessProbe:
          tcpSocket:
            port: 8154
          initialDelaySeconds: 30
          periodSeconds: 40
        ports:
        -name: http 
         containerPort: 8153
        -name: https
         containerPort: 8154

